---
const { next, prev, current } = Astro.props;
---

<div class="next-prev">
  <div class="prev">
    {
      prev && (
        <a class="button" href={prev.url}>
          {prev.label}
        </a>
      )
    }
  </div>
  <div class="current">
    {current}
  </div>
  <div class="next">
    {
      next && (
        <a class="button" href={next.url}>
          {next.label}
        </a>
      )
    }
  </div>
</div>

<style>
  .next-prev {
    display: flex;
    align-items: center;
    justify-content: space-between;

    margin-top: 1rem;
    margin-bottom: 1rem;
    gap: 3rem;
  }

  .next-prev a {
    display: inline-block;
  }
</style>

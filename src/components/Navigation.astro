---
const navItems = [
  {
    url: "/dashboard/",
    title: "🏠 Dashboard",
  },
  {
    url: "/articles/",
    title: "💬 Articles",
  },
  {
    url: "/music-items/",
    title: "🎵 Music items",
  },
  {
    url: "/sources/",
    title: "📖 Sources",
  },
];

const currentUrl = Astro.url.pathname;
console.log({ currentUrl });
---

<nav>
  <ul>
    {
      navItems.map((item) => (
        <li>
          <a
            class="button"
            href={item.url}
            aria-current={currentUrl.startsWith(item.url) ? "page" : undefined}
          >
            {item.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav ul {
    list-style: none;
    padding-left: 0;

    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;

    margin: 0;
  }

  nav ul a[aria-current] {
    border-width: 2px;
    background-color: var(--color-accent-glare);
  }
</style>
